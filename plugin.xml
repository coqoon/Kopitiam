<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="Kopitiam.actionSet"
            label="Kopitiam Action Set"
            visible="true">
         <action
               class="dk.itu.sdg.kopitiam.CompileCoqAction"
               icon="icons/compile.gif"
               id="kopitiam.actions.CompileAction"
               label="&amp;Compile"
               toolbarPath="CoqGroup"
               tooltip="Compile">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.InterruptCoqAction"
               icon="icons/stop.gif"
               id="kopitiam.actions.InterruptAction"
               label="&amp;Interrupt Coq"
               toolbarPath="CoqGroup"
               tooltip="Interrupt Coq">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.RestartCoqAction"
               icon="icons/dead.gif"
               id="kopitiam.actions.RestartAction"
               label="&amp;Restart Coq"
               toolbarPath="CoqGroup"
               tooltip="Restart Coq">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.CoqRefreshAction"
               icon="icons/refresh.gif"
               id="kopitiam.actions.RefreshAction"
               label="&amp;Refresh"
               toolbarPath="CoqGroup"
               tooltip="Refresh">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.CoqStepAllAction"
               icon="icons/downtoo.gif"
               id="kopitiam.actions.StepAllAction"
               label="&amp;Step All"
               toolbarPath="CoqGroup"
               tooltip="Step All">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.CoqStepUntilAction"
               icon="icons/icon_lego.gif"
               id="kopitiam.actions.StepUntilAction"
               label="&amp;Step Until Cursor"
               toolbarPath="CoqGroup"
               tooltip="Step Until Cursor">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.CoqStepAction"
               icon="icons/down.gif"
               id="kopitiam.actions.StepAction"
               label="&amp;Step"
               toolbarPath="CoqGroup"
               tooltip="Step">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.CoqRetractAction"
               icon="icons/uptoo.gif"
               id="kopitiam.actions.CoqRetractAction"
               label="&amp;Retract"
               toolbarPath="CoqGroup"
               tooltip="Retract">
         </action>
         <action
               class="dk.itu.sdg.kopitiam.CoqUndoAction"
               icon="icons/up.gif"
               id="kopitiam.actions.UndoStepAction"
               label="&amp;Undo"
               toolbarPath="CoqGroup"
               tooltip="Undo">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="Kopitiam.step_forward"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+N">
      </key>
      <key
            commandId="Kopitiam.step_cursor"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Enter">
      </key>
      <key
            commandId="Kopitiam.step_backward"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+U">
      </key>
      <key
            commandId="Kopitiam.retract"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+R">
      </key>
      <key
            commandId="Kopitiam.step_all"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+B">
      </key>
      <key
            commandId="Kopitiam.refresh"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+P">
      </key>
      <key
            commandId="Kopitiam.interrupt"
            contextId="Kopitiam.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+C">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="dk.itu.sdg.kopitiam.CoqEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="v"
            icon="icons/coqide.gif"
            id="kopitiam.CoqEditor"
            name="Coq Editor">
         <contentTypeBinding
               contentTypeId="kopitiam.CoqFile">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="Kopitiam"
            name="Coq Views">
      </category>
      <view
            allowMultiple="false"
            category="Kopitiam"
            class="dk.itu.sdg.kopitiam.GoalViewer"
            icon="icons/sample.gif"
            id="kopitiam.GoalViewer"
            name="Goal Viewer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="kopitiam.GoalViewer"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="dk.itu.sdg.kopitiam.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="dk.itu.sdg.kopitiam.KopitiamPreferencePage"
            id="Kopitiam.settings"
            name="Kopitiam">
      </page>
      <page
            category="Kopitiam.settings"
            class="dk.itu.sdg.kopitiam.KopitiamColorPreferencePage"
            id="Kopitiam.colorSettings"
            name="Color Settings">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="Kopitiam.category"
            name="Kopitiam">
      </category>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CoqStepAction"
            id="Kopitiam.step_forward"
            name="Step forward command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CoqUndoAction"
            id="Kopitiam.step_backward"
            name="Step backward command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CoqStepUntilAction"
            id="Kopitiam.step_cursor"
            name="Step to cursor command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CoqStepAllAction"
            id="Kopitiam.step_all"
            name="Step all command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CoqRetractAction"
            id="Kopitiam.retract"
            name="Retract all command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.RestartCoqAction"
            id="Kopitiam.restart_coq"
            name="Restart Coq command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CompileCoqAction"
            id="Kopitiam.compile_coq"
            name="Compile Coq">
      </command>
      <command
            defaultHandler="dk.itu.sdg.kopitiam.TranslateToSimpleJavaAction"
            description="Translate to SimpleJava"
            id="Kopitiam.translatetosimplejava"
            name="Translate to SimpleJava">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.CoqRefreshAction"
            id="Kopitiam.refresh"
            name="Refresh Coq command">
      </command>
      <command
            categoryId="Kopitiam.category"
            defaultHandler="dk.itu.sdg.kopitiam.InterruptCoqAction"
            id="Kopitiam.interrupt"
            name="Interrupt Coq command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="Context for Kopitiam files"
            id="Kopitiam.context"
            name="In Kopitiam"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
<!--      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="Kopitiam.translatetosimplejava">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
        <command
        	commandId="Kopitiam.translatetosimplejava">
       	</command>
      </menuContribution> -->
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="dk.itu.sdg.kopitiam.NewCoqFileWizard"
            icon="icons/coqide.gif"
            id="Kopitiam.newCoqFileWizard"
            name="Coq File">
      </wizard>
   </extension>

   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            name="dk.itu.sdg.kopitiam.processed">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            name="dk.itu.sdg.kopitiam.processing">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="dk.itu.sdg.kopitiam.popupContribution"
            targetID="#CompilationUnitEditorContext">
         <action
               class="dk.itu.sdg.kopitiam.ProveMethodAction"
               id="dk.itu.sdg.kopitiam.popup.provemethod"
               label="Verify Method"
               menubarPath="group.add">
         </action>
      </viewerContribution>
<!--      <viewerContribution
            id="dk.itu.sdg.kopitiam.popupContribution"
            targetID="#CompilationUnitRulerContext">
         <action
               class="dk.itu.sdg.kopitiam.ProveMethodAction"
               id="dk.itu.sdg.kopitiam.popup.provemethodruler"
               label="Prove Method"
               menubarPath="group.add">
         </action>
      </viewerContribution> -->
   </extension>
   <extension
         id="dk.itu.sdg.kopitiam.provenmarker"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="2"
            markerType="dk.itu.sdg.kopitiam.provenmarker"
            name="dk.itu.sdg.kopitiam.provenannotation"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="dk.itu.sdg.kopitiam.provenannotation"
            colorPreferenceKey="dk.itu.sdg.kopitiam.proverannotation.mycolorhighlightkey"
            colorPreferenceValue="50,249,255"
            highlightPreferenceKey="dk.itu.sdg.kopitiam.proverannotation.mycolorbackgroundhighlightkey"
            highlightPreferenceValue="true"
            icon="icons/checkmark.gif"
            includeOnPreferencePage="true"
            overviewRulerPreferenceKey="dk.itu.sdg.kopitiam.proverannotation.overviewrulerkey"
            overviewRulerPreferenceValue="true"
            textPreferenceKey="provenmarkerIndicationInText"
            textPreferenceValue="true"
            textStylePreferenceKey="dk.itu.sdg.kopitiam.proverannotation.textStyle"
            textStylePreferenceValue="BOX"
            verticalRulerPreferenceKey="provenmarkerIndicationInVerticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            file-extensions="v"
            id="kopitiam.CoqFile"
            name="Coq file"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="dk.itu.sdg.kopitiam.CoqPerspective"
            icon="icons/coqide.gif"
            id="dk.itu.sdg.kopitiam.CoqPerspective"
            name="Coq">
      </perspective>
   </extension>

</plugin>
