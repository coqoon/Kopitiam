   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            file-extensions="v"
            id="dk.itu.sdg.kopitiam.CoqFile"
            name="Coq file"
            priority="normal">
      </content-type>
      <content-type
            file-extensions="vo"
            id="dk.itu.sdg.kopitiam.CoqObjectFile"
            name="Coq object file"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="dk.itu.sdg.kopitiam.CoqPerspective"
            icon="icons/coqide.gif"
            id="dk.itu.sdg.kopitiam.CoqPerspective"
            name="Coq">
      </perspective>
   </extension>
   <extension
         id="dk.itu.sdg.kopitiam.CoqBuilder"
         name="Coq Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="dk.itu.sdg.kopitiam.CoqBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="dk.itu.sdg.kopitiam.CoqNature"
         name="Coq Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="dk.itu.sdg.kopitiam.CoqNature">
         </run>
      </runtime>
      <builder
            id="dk.itu.sdg.kopitiam.CoqBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="dk.itu.sdg.kopitiam.LoadPathConfigurationPage"
            icon="icons/coqide.gif"
            id="dk.itu.sdg.kopitiam.propertyPages.CoqLoadPath"
            name="Coq Load Path">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="dk.itu.sdg.kopitiam.CoqNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.jdt.internal.ui.javaeditor.JavaEditor"
            class="dk.itu.sdg.kopitiam.javap.JavaEditorStateFactory">
         <adapter
               type="dk.itu.sdg.kopitiam.CoqTopContainer">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="dk.itu.sdg.kopitiam.CoqStepForwardHandler"
            commandId="Kopitiam.step_forward">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.CoqStepBackHandler"
            commandId="Kopitiam.step_backward">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.CoqStepToCursorHandler"
            commandId="Kopitiam.step_cursor">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.CoqStepAllHandler"
            commandId="Kopitiam.step_all">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.CoqRetractAllHandler"
            commandId="Kopitiam.retract">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.RestartCoqHandler"
            commandId="Kopitiam.restart_coq">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.CompileCoqHandler"
            commandId="Kopitiam.compile_coq">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.InterruptCoqHandler"
            commandId="Kopitiam.interrupt">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsCoq">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.javap.VerifyMethodHandler"
            commandId="Kopitiam.verify_method">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsJava">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.javap.SaveProofCertificateHandler"
            commandId="Kopitiam.save_proof_certificate">
         <activeWhen>
            <reference
                  definitionId="Kopitiam.activeEditorIsJava">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="dk.itu.sdg.kopitiam.ExportCoqMakefileHandler"
            commandId="Kopitiam.export_coq_makefile">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="Kopitiam.activeEditorIsCoq">
         <with
               variable="activeEditor">
            <adapt
                  type="dk.itu.sdg.kopitiam.CoqTopContainer">
               <instanceof
                     value="dk.itu.sdg.kopitiam.CoqEditor">
               </instanceof>
            </adapt>
         </with>
      </definition>
      <definition
            id="Kopitiam.activeEditorIsJava">
         <with
               variable="activeEditor">
            <adapt
                  type="dk.itu.sdg.kopitiam.CoqTopContainer">
               <instanceof
                     value="dk.itu.sdg.kopitiam.javap.JavaEditorState">
               </instanceof>
            </adapt>
         </with>
      </definition>
   </extension>
   <extension
         id="dk.itu.sdg.kopitiam.problemmarker"
         name="Kopitiam problem"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="dk.itu.sdg.kopitiam.ResolutionGenerator"
            markerType="dk.itu.sdg.kopitiam.problemmarker">
      </markerResolutionGenerator>
   </extension>

</plugin>
