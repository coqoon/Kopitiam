<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="CoqScala.actionSet"
            label="Sample Action Set"
            visible="true">
         <action
               class="coqscala.CoqStepAction"
               icon="icons/down.gif"
               id="coqscala.actions.StepAction"
               label="&amp;Step Actiontion"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="CoqGroup"
               tooltip="CoqStepAction">
         </action>
         <action
               class="coqscala.CoqUndoAction"
               icon="icons/up.gif"
               id="coqscala.actions.UndoStepAction"
               label="&amp;Undo Step Action"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="CoqGroup"
               tooltip="CoqUndoAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="coqscala.CoqEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="v"
            icon="icons/sample.gif"
            id="coqscala.CoqEditor"
            name="Coq Editor">
      </editor>
      <editor
            class="coqscala.CoqJavaEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="java"
            icon="icons/sample.gif"
            id="coqscala.CoqJavaEditor"
            name="Coq Java Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="CoqScala"
            name="Coq Views">
      </category>
      <view
            allowMultiple="false"
            category="CoqScala"
            class="coqscala.GoalViewer"
            icon="icons/sample.gif"
            id="coqscala.GoalViewer"
            name="Goal Viewer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="coqscala.GoalViewer"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
