   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="Context for Kopitiam files"
            id="Kopitiam.context"
            name="In Kopitiam"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
